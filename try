        <Box sx={{ padding: 2 }}>
          <Typography className="typography-main-header">
            {t("insured_occupation")}
          </Typography>
          <Divider />
          <Box sx={{ marginTop: 2 }}>
            <TableContainer>
              <Table
                sx={{
