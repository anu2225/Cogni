package com.eapp.service;

import com.eapp.dto.requestDTO.CalculationRequest;
import com.eapp.dto.reponseDTO.CalculationResponse;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

@Service
public class CoherentService {

    private final RestTemplate restTemplate = new RestTemplate();

    private final String BASE_URL = "https://api.coherent.global/calculation";

    public CalculationResponse calculatePremium(CalculationRequest request) {

        String url = BASE_URL + "/premium";

        // POST request & convert response to CalculationResponse
        return restTemplate.postForObject(url, request, CalculationResponse.class);
    }
}
