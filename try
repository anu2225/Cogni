                            onChange={(e) =>
                              handleFieldChange(
                                e.target.value,
                                "workAddrStrNum"
                              )
                            }
                          />
                        </TableCell>
                      {/* </TableRow>
                      <TableRow> */}
                        {/* <TableCell>
                          {t("workplace_address_province")}{" "}
                        </TableCell> */}
                        <TableCell>
                          <Dropdown
                            label={t("workplace_address_province")}
                            options={states}
                            value={fields.insuredWorkProvince}
                            onChange={(e) =>
                              handleFieldChange(
                                e.target.value,
                                "insuredWorkProvince"
                              )
