    workAddrSubDist: string;workAddrZipCode: string;workFullAddress: string cRegAddNum: string;cRegAddVilla: string; cRegAddMoo: string  cRegAddAlley: string; cRegAddStrNum: string; cRegAddProvince: string;
    cRegAddDist: string;
