                          <TextField
                            id="outlined-basic"
                            label={t("contact_address_villa/building")}
                            size="small"
                            variant="standard"
                            value={fields.cRegAddVilla}
                            onChange={(e) =>
                              handleFieldChange(e.target.value, "cRegAddVilla")
                            }
