    insuredDateOfBirth: dayjs.Dayjs; insuredGender : string insuredAge: string insuredProvince: string;insuredDistrict: string;imgURL: string;workplaceAddressOptn: string;currentAddressOptn: string;insContactAddressIndicator: string;motorcycleOptn: string;
    regAddrNum: string; regAddrVilla: string;regAddrMooNum: string;regAddrAlley: string;regAddrStrNum: string;regAddrSubDist: string;regAddrZipCode: string;regFullAddr:string;familyMemberType: string;
