    React.SetStateAction<{
      insuredNationality: string;insuredEvidenceOfProof: string;insuredIdNumber: string;customerIdEbao: number;insuredIdExpiryDate: dayjs.Dayjs;insuredTitle: string;insuredFirstName: string;insuredSurName: string;
      insuredDateOfBirth: dayjs.Dayjs;insuredGender : string;insuredAge: string;insuredProvince: string;insuredDistrict: string; imgURL: string;
