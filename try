---

Frontend тЖТ premium-form.jsx

ЁЯУД File: /src/components/PremiumForm.jsx

import React, { useState } from "react";
import axios from "axios";

export default function PremiumForm() {

  const [form, setForm] = useState({
    age: "",
    sumAssured: "",
    policyTerm: "",
    productCode: ""
  });

  const [premium, setPremium] = useState(null);

  const handleChange = (e) => {
    setForm({ ...form, [e.target.name]: e.target.value });
  };

  const calculate = async () => {
    const res = await axios.post("http://localhost:8080/api/calc/premium", form);
    setPremium(res.data.premium);
  };

  return (
    <div style={{ padding: 20 }}>
      <h2>Premium Calculator</h2>

      <input name="age" placeholder="Age" onChange={handleChange} /> <br />
      <input name="sumAssured" placeholder="Sum Assured" onChange={handleChange} /> <br />
      <input name="policyTerm" placeholder="Policy Term" onChange={handleChange} /> <br />
      <input name="productCode" placeholder="Product Code" onChange={handleChange} /> <br />

      <button onClick={calculate}>Calculate</button>

      {premium !== null && (
        <h3>Final Premium: {premium}</h3>
      )}
    </div>
  );
}


